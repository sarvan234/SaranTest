@page
@model LoginModel

@{
    ViewData["Title"] = "Home Page";
}

    <h1 class="text-md-center">Primark Integration CoE Dashboards</h1>
<hr />
    <div class="row">
        <div class="modal-dialog">
            <section>
                <p class="lead text-justify">Integartion CoE is one of the core area for Primark ICT </p>
                <p class="lead text-justify">This Dashboard enables easy access to the audit data of Integration to be easily accessible by Primark Internal users for testing and BAU Purposes</p>
            </section>
        </div>
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group float-md-right">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>*@
                </form>
            </section>
        </div>
    </div>
    <div class="row">
        <h2>Getting Access</h2>
        </div>
        <div class="row">
            <p class="lead">Access can be obtained by getting in touch with Integration TCS CoE team</p>
        </div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
